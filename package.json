    "cypress": "^13.15.2",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "@mmisty/cypress-allure-adapter": "^3.2.2",
    "@shelex/cypress-allure-plugin": "^2.40.2",
    "allure-commandline": "^2.32.0"
  }
}
